{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "jsx": "react-jsx",
    "allowUmdGlobalAccess": true
  },
  "include": ["./src", "./src/types/global.d.ts"] // Укажите ваш файл .d.ts
}
